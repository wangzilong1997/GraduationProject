<view class="page">
  <view class="page__bd">
    <view class="container">
      <form bindsubmit="createOrder" report-submit="true">
        <view class="goods-list">
          <view class="list-title">商品列表</view>
          <view class="a-goods" wx:for-items="{{goodsList.list}}" wx:key="{{index}}">
            <view class="img-box">
              <image src="{{item.pic}}" class="img" />
            </view>
            <view class="text-box">
              <view class="arow arow01">
                <view class="goods-name">{{item.name}}</view>
                <view class="goods-price">¥ {{item.price}}</view>
              </view>
              <view class="arow">
                <view class="goods-label">{{item.label}}</view>
                <view class="goods-num">x {{item.number}}</view>
              </view>
            </view>
          </view>
        </view>
        <view class="row-box">
          <view class="row-label">桌号</view>
         
          <input name="remark" type="number" class="right-text"  placeholder="请输入您所在的桌号" />
          
          
        </view>
        <view class="jiesuan-box">
          <view class="left-price">
            <view class="total">合计：¥ {{goodsList.totalPrice}}</view>
          </view>
          <button class="to-pay-btn" formType="submit">提交订单</button>
        </view>
      </form>
    </view>
  </view>
</view>